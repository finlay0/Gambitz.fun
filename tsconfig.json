{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "preserveSymlinks": true,
    "outDir": "dist",
    "types": ["node"]
  },
  "include": ["scripts/**/*", "src/**/*"],
  "exclude": ["node_modules"]
} 