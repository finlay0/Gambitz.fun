{
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015"],
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/tests/*": ["tests/*"],
      "@/programs/*": ["programs/*"],
      "@/migrations/*": ["migrations/*"]
    },
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts",
    "tests/**/*.ts",
    "programs/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "target"
  ]
}
