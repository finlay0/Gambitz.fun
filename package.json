{
  "private": true,
  "scripts": {
    "anchor:install": "pnpm --filter ./contracts... exec npm install -g @coral-xyz/anchor@latest",
    "dev:web": "pnpm --filter ./web... dev",
    "dev:contracts": "pnpm --filter ./contracts... test",
    "test": "pnpm run dev:contracts && pnpm --filter ./web... lint",
    "prepare": "husky install"
  },
  "pnpm": {
    "overrides": {
      "react": "18.2.0",
      "react-dom": "18.2.0"
    }
  },
  "packageManager": "pnpm@10.8.1",
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^15.5.1"
  }
}
